<h2>新規イベント</h2>

<%= form_with(model: @event, local: true) do |f| %>
  <div>
    <%= f.label :title, "タイトル" %>
  </div>
  <div>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description, "詳細" %>
  </div>
  <div>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :start, "開始日" %>
  </div>
  <div>
    <%= f.date_field :start %>
  </div>
  <div>
    <%= f.label :end, "終了日" %>
  </div>
  <div>
    <%= f.date_field :end %>
  </div>
  <div>
    <%= f.submit "編集" %>
  </div>
<% end %>